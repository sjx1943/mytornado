/* pages/index/index.wxss */

.container {
  padding: 0;
  background: #f5f5f5;
}

/* 搜索栏 */
.search-bar {
  background: #ff6b35;
  padding: 20rpx 30rpx 30rpx;
  position: sticky;
  top: 0;
  z-index: 100;
}

.search-input-container {
  display: flex;
  align-items: center;
  background: white;
  border-radius: 50rpx;
  padding: 0 30rpx;
  height: 80rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.search-btn {
  padding: 10rpx;
  color: #ff6b35;
  font-size: 32rpx;
}

/* 分类导航 */
.categories {
  background: white;
  padding: 30rpx 0;
  margin-bottom: 20rpx;
}

.categories-scroll {
  white-space: nowrap;
}

.category-list {
  display: flex;
  padding: 0 30rpx;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 40rpx;
  min-width: 80rpx;
}

.category-icon {
  width: 80rpx;
  height: 80rpx;
  background: #f8f9fa;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  margin-bottom: 10rpx;
}

.category-name {
  font-size: 24rpx;
  color: #666;
  text-align: center;
}

/* 轮播图 */
.banner-section {
  margin-bottom: 20rpx;
}

.banner-swiper {
  height: 300rpx;
  border-radius: 16rpx;
  overflow: hidden;
  margin: 0 30rpx;
}

.banner-image {
  width: 100%;
  height: 100%;
}

.banner-title {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(transparent, rgba(0,0,0,0.5));
  color: white;
  padding: 40rpx 30rpx 20rpx;
  font-size: 28rpx;
  font-weight: bold;
}

/* 区块样式 */
.section {
  margin-bottom: 30rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  background: white;
  border-bottom: 1rpx solid #f0f0f0;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.section-more {
  color: #ff6b35;
  font-size: 28rpx;
}

.publish-btn {
  background: #ff6b35;
  color: white;
  padding: 12rpx 24rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

/* 热门商品 */
.hot-products {
  background: white;
  padding: 30rpx;
  padding-top: 0;
}

.hot-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.hot-product-item {
  border-radius: 12rpx;
  overflow: hidden;
  background: #f8f9fa;
}

.hot-product-image {
  width: 100%;
  height: 160rpx;
}

.hot-product-info {
  padding: 15rpx;
}

.hot-product-name {
  font-size: 24rpx;
  color: #333;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.hot-product-price {
  color: #ff6b35;
  font-size: 26rpx;
  font-weight: bold;
}

/* 商品列表 */
.product-list {
  background: white;
}

.product-item {
  display: flex;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background-color 0.3s;
}

.product-item:active {
  background-color: #f8f9fa;
}

.product-item:last-child {
  border-bottom: none;
}

.product-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.product-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.product-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.product-desc {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.product-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.product-price {
  color: #ff6b35;
  font-size: 32rpx;
  font-weight: bold;
}

.product-location {
  color: #999;
  font-size: 24rpx;
}

.product-tags {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.tag {
  background: #f0f0f0;
  color: #666;
  padding: 4rpx 12rpx;
  border-radius: 16rpx;
  font-size: 22rpx;
}

.product-time {
  color: #999;
  font-size: 22rpx;
}

/* 授权区块 */
.auth-section {
  margin: 40rpx 30rpx;
}

.auth-card {
  background: white;
  padding: 60rpx 40rpx;
  border-radius: 16rpx;
  text-align: center;
}

.auth-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.auth-desc {
  color: #666;
  font-size: 28rpx;
  margin-bottom: 40rpx;
  line-height: 1.6;
}

/* 响应式 */
@media (max-width: 375px) {
  .hot-grid {
    grid-template-columns: repeat(2, 1fr);
  }
  
  .product-item {
    padding: 20rpx;
  }
  
  .product-image {
    width: 120rpx;
    height: 120rpx;
  }
}
